<UserControl
    x:Class="BarCodeScanner.View.LogsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="White"
    mc:Ignorable="d">
    <Grid>
        <ListView ItemsSource="{Binding LogsList}" 
                  SelectedItem="{Binding SelectedIteam}"
                  SelectionMode="Single">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Удалить" 
                              Command="{Binding RemoveCommand}"/>
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding WorkerBy}" Header="ФИО" Width="170"/>
                    <GridViewColumn DisplayMemberBinding="{Binding ScanTime}" Header="Время сканирование" />
                    <GridViewColumn DisplayMemberBinding="{Binding ScanType}" Header="Тип сканирование" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
